<Window x:Class="PZW_4Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:PZW_4Lab.View"
        Title="MainWindow" Height="480" Width="820">
    <Grid Background="AntiqueWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <view:CurrentUserView Width="Auto" Height="Auto" VerticalAlignment="Stretch"></view:CurrentUserView>
        <view:UserCollectionView Grid.Row="1" VerticalAlignment="Stretch"></view:UserCollectionView>
        <view:PostCollectionView Grid.Column="1" Grid.RowSpan="2"></view:PostCollectionView>
    </Grid>
</Window>
